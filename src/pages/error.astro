---
const params = Astro.url.searchParams;

const message =
  params.get("msg") ??
  "Ocurrió un problema inesperado. Por favor intenta nuevamente.";

const code = params.get("code");
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Error</title>
    <link rel="stylesheet" href="/styles/ui.css" />
  </head>

  <body>
    <div class="container">
      <section class="card" style="max-width:560px;margin:40px auto;">
        <h1>⚠️ Algo salió mal</h1>

        <p style="margin-top:8px;">
          {message}
        </p>

        {code && (
          <p style="margin-top:12px; font-size:13px; opacity:.65;">
            Código de referencia: <strong>{code}</strong>
          </p>
        )}

        <div style="margin-top:20px; display:flex; gap:10px; flex-wrap:wrap;">
          <a href="/home" class="btn">Volver a Home</a>
          <a href="/" class="btn ghost">Ir al inicio</a>
        </div>
      </section>
    </div>
  </body>
</html>
