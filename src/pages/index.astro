<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <title>Hola Mundo Astro</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
      body {
        margin: 0;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
        background: linear-gradient(135deg, #4f46e5, #06b6d4);
      }

      .card {
        background: rgba(255, 255, 255, 0.15);
        backdrop-filter: blur(12px);
        padding: 3rem;
        border-radius: 1.5rem;
        text-align: center;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        color: white;
        width: 320px;
      }

      h1 {
        font-size: 2.3rem;
        margin-bottom: 2rem;
      }

      button {
        background: #22d3ee;
        border: none;
        padding: 0.9rem 2rem;
        border-radius: 999px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 8px 20px rgba(34, 211, 238, 0.4);
      }

      button:hover {
        transform: translateY(-2px) scale(1.03);
        background: #67e8f9;
      }

      button:active {
        transform: scale(0.97);
      }
    </style>
  </head>

  <body>
    <div class="card">
      <h1>üöÄ Hola Mundo Astro</h1>
      <button id="btnInsertar">Insertar</button>
    </div>

    <script>
      document
        .getElementById("btnInsertar")
        .addEventListener("click", async () => {
          try {
            const res = await fetch("/api/insertar", {
              method: "POST",
            });

            if (res.ok) {
              alert("‚úÖ Insertado correctamente");
            } else {
              alert("‚ùå Error al insertar");
            }
          } catch (error) {
            alert("‚ö†Ô∏è Error de conexi√≥n");
          }
        });
    </script>
  </body>
</html>
