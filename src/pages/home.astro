---
import Breadcrumbs from "../components/Breadcrumbs.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home</title>
    <link rel="stylesheet" href="/styles/ui.css" />
    <link rel="stylesheet" href="/styles/home.css" />
  </head>
  <body>
    <div class="container">
      <header class="topbar">
        <div class="brand">üöÄ Proyecto Astro</div>
        <nav class="nav">
          <a href="/home">Home</a>
          <a href="/perfil">Perfil</a>
          <a href="/configuracion">Configuraci√≥n</a>
          <a href="/formulario">Formulario</a>

          <!-- ‚úÖ NUEVO: Cerrar sesi√≥n -->
          <button id="btnLogout" class="btnLogout" type="button">Cerrar sesi√≥n</button>
        </nav>
      </header>

      <Breadcrumbs items={[{ label: "Home" }]} />

      <section class="card">
        <h1>Bienvenido</h1>
        <p>Ya superaste la verificaci√≥n correctamente.</p>

        <div style="margin-top:14px; display:flex; gap:10px; flex-wrap:wrap;">
          <button id="btnInsertar" class="btn">Insertar</button>
        </div>

        <p id="msg" style="margin-top:12px;"></p>
      </section>
    </div>

    <script type="module">
      import { goError } from "/scripts/goError.js";

      // ===== Insertar =====
      const btn = document.getElementById("btnInsertar");
      const msg = document.getElementById("msg");

      if (btn) {
        btn.addEventListener("click", async () => {
          try {
            if (msg) msg.textContent = "Insertando...";

            const res = await fetch("/api/insertar", {
              method: "POST",
              credentials: "same-origin",
            });

            const data = await res.json().catch(() => ({}));

            if (!res.ok || !data.ok) {
              goError(
                data.publicMessage || "No se pudo completar la operaci√≥n.",
                data.code || "E_INSERT"
              );
              return;
            }

            if (msg) msg.textContent = "‚úÖ Insertado correctamente";
          } catch {
            goError("Ocurri√≥ un error de red. Intenta nuevamente.", "E_NET");
          }
        });
      }

      // ===== ‚úÖ Logout =====
      const btnLogout = document.getElementById("btnLogout");

      if (btnLogout) {
        btnLogout.addEventListener("click", async () => {
          try {
            const res = await fetch("/api/auth/logout", {
              method: "POST",
              credentials: "same-origin",
            });

            const data = await res.json().catch(() => ({}));

            // siempre manda al inicio (login/captcha)
            window.location.href = data.redirectTo || "/";
          } catch {
            goError("No se pudo cerrar sesi√≥n. Intenta nuevamente.", "E_LOGOUT");
          }
        });
      }
    </script>
  </body>
</html>
