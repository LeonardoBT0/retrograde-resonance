---
type Crumb = { label: string; href?: string };
const { items = [] } = Astro.props as { items: Crumb[] };
---

<nav class="breadcrumbs" aria-label="Breadcrumb">
  <ol>
    {items.map((c, i) => (
      <li>
        {c.href && i !== items.length - 1 ? <a href={c.href}>{c.label}</a> : <span aria-current="page">{c.label}</span>}
      </li>
    ))}
  </ol>
</nav>
